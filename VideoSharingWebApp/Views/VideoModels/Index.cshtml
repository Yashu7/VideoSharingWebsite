@model IEnumerable<VideoSharingWebApp.Models.VideoModel>

@{
    ViewBag.Title = "Videos";

}
<h3>Most Popular:</h3>
@foreach (var item in Model.OrderByDescending(i => i.Views).Take(3))
{
    <div style=" display: inline-block; width: 320px;
     padding: 10px; margin: 10px; border:2px groove ">

        <b>Title: @Html.DisplayFor(modelItem => item.Title)</b>
        <p>Author: @Html.DisplayFor(modelItem => item.UserId)</p>
        <button>@Html.ActionLink("Watch", "Details", new { id = item.Id })</button>

    </div>
}

<h3>The Newest Videos:</h3>
@foreach (var item in Model.OrderByDescending(i => i.Id).Take(3))
{
    <div style=" display: inline-block; width: 320px;
     padding: 10px; margin: 10px; border:2px groove ">

        <b>Title: @Html.DisplayFor(modelItem => item.Title)</b>
        <p>Author: @Html.DisplayFor(modelItem => item.UserId)</p>
        <img src= "@(item.Thumbnail)" />
        <button>@Html.ActionLink("Watch", "Details", new { id = item.Id })</button>

    </div>
}



