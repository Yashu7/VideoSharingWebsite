@model VideoSharingWebApp.Models.VideoModel

@{
    ViewBag.Title = "Details";
}



<div>
    <video class="dl-horizontal" style="display:block; margin-left:auto;margin-right:auto; grid-template:auto; object-fit:fill;
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
  max-height:400px;
  max-width:300px;
  transform:initial;
" controls>
        <source src="@Html.DisplayFor(model => model.Path)" type="video/mp4">

        Your browser does not support HTML5 video.
    </video>

    <dl class="dl-horizontal" style="display:block; margin-left:auto;margin-right:auto;">

        <dt style="font-size:20px">
            Title:
        </dt>
        <dd style="font-size:20px">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt style="font-size:20px">
            Description:
        </dt>
        <dd style="font-size:20px">
            @Html.DisplayFor(model => model.VideoDesc)
        </dd>
        <dt style="font-size:20px">
            Creator:
        </dt>

        <dd style="font-size:20px">
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt style="font-size:20px">
            Date Uploaded:
        </dt>

        <dd style="font-size:20px">
            @Html.DisplayFor(model => model.UploadTime.Day)
            @Html.DisplayFor(model => model.UploadTime.Month)
            @Html.DisplayFor(model => model.UploadTime.Year)

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
